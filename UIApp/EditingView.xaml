<Window
    xmlns="https://github.com/avaloniaui"
    MinWidth="500"
    MinHeight="300">
    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="5"
            Orientation="Horizontal">
            <TextBlock>The phrase from pack</TextBlock>
            <TextBlock Text="{Binding SelectedPack}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="5"
            Orientation="Horizontal">
            <TextBlock Margin="0,5,5,0">Phrase:</TextBlock>
            <TextBox MinWidth="200" Text="{Binding Phrase.Phrase}" />
            <TextBlock Margin="20,5,0,0">Phrase:</TextBlock>
            <DropDown SelectedItem="{Binding Phrase.Complexity}">
                <DropDownItem>1</DropDownItem>
                <DropDownItem>2</DropDownItem>
                <DropDownItem>3</DropDownItem>
                <DropDownItem>4</DropDownItem>
                <DropDownItem>5</DropDownItem>
            </DropDown>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="5"
            Orientation="Vertical">
            <TextBlock>Description:</TextBlock>
            <TextBox Text="{Binding Phrase.Description}" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button Command="{Binding SaveCommand}" Content="Save" />
        </StackPanel>
    </Grid>
</Window>